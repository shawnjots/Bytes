@model IEnumerable<Bytes.Models.Category>

<div>
    <h4>All Categories</h4>
    <hr />
    <p>
        @Html.ActionLink("New Category", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateCategory", new { id = item.CategoryID }) |
                    @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryID },
new { onclick = "return confirm('Are sure you want to delete this category?')" })

                </td>
            </tr>
        }

    </table>
</div>