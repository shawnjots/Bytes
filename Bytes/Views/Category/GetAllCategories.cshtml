@model  IEnumerable<Bytes.Models.Category>

<div>
    <h4>Category</h4>
    <hr />
    <p>
        @Html.ActionLink("Add New Category", "AddCategory")
    </p>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr> 
            @foreach (var item in Model)
            {
                @Html.HiddenFor(model => item.CategoryID)
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName )
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateCategory", new { id = item.CategoryID }) |
                    @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryID },
new { onclick = "return confirm('Are sure you want to delete this category?')" }) |
                    @Html.ActionLink("Back to List", "GetAllCategories")
                </td>
            </tr>

            }

        </table>
    </div>

